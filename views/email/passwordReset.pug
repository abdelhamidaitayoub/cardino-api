extends baseEmail

block content
  p Hi #{firstName},
  p
    | You recently requested to reset your password for your natours account. Use the link [#{url}] to reset it.
  table.btn.btn-primary(role="presentation" border="0" cellpadding="0" cellspacing="0")
    tbody
      tr
        td(align="left")
          table(role="presentation" border="0" cellpadding="0" cellspacing="0")
            tbody
              tr
                td
                  a(href=`${url}` target="_blank") Reset your password
  p This password reset is only valid for the next 10 minutes.